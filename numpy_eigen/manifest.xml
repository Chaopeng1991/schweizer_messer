<package>
  <description brief="numpy_eigen">

     A library that provides boost::python based type conversion
     between numpy arrays and Eigen matrices.

  </description>
  <author>Paul Furgale</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/numpy_eigen</url>

  <depend package="eigen"/>

  <!-- Python test facility -->
  <depend package="rostest"/>
  
  <export>
    <python path="${prefix}/python"/>
    <cpp cflags="`rosboost-cfg --cflags` -I${prefix}/include"/>
  </export>

</package>


